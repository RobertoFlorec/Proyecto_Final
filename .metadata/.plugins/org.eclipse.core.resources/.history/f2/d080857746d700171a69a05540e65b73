#include "ADC.h"
#include "ACELEROMETRO.h"

const ADC_ConfigType ADC_Config = {
		ADC_0,
		BITMODE_10_11,
		DADP1,
		SAMPLES_8,
		AVERAGE_ENABLE,
		INTERRUPT_ENABLE
};

void acelerometroInit(void){
ADC_init(&ADC_Config);
}

uint8 getValue_Y(void){
	uint8 getValue_Y;
	getValue_Y = ADC_read(ADC_Config.ADC_Channel);
	return getValue_Y;
}

